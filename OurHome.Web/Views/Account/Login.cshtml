@using Abp.Web.Mvc.Extensions
@using Microsoft.Owin.Security
@model OurHome.Web.Models.Account.LoginViewModel
@section Styles
{
    @Html.IncludeStyle("~/Views/Account/Login.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Login.js")
}
<div class="container">
    <div id="LoginArea" class="row">
        <div class="col-lg-12">
            <div class="card">
                <form id="LoginForm" class="form-horizontal" action="@(Url.Action("Login", "Account"))" method="POST">
                    <fieldset>
                        <legend>Вход</legend>
                        
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                        }

                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()

                        
                        @Html.HiddenFor(x=>x.TenancyName)
                        @Html.HiddenFor(x=>x.ReturnUrl)
                        @Html.HiddenFor(x=>x.ReturnUrlHash)
                        @Html.HiddenFor(x=>x.ReturnUrl)

                        <div class="form-group">
                            <div class="col-lg-12">
                                @Html.TextBoxFor(x=>x.UsernameOrEmailAddress, new {@class="form-control", plceholder="E-Mail", required="required", maxlength= OurHome.Users.User.MaxEmailAddressLength })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type ="password", plceholder = "Пароль", required = "required", maxlength = OurHome.Users.User.MaxPlainPasswordLength })
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(x=>x.RememberMe)
                                        <span class="ripple"></span>
                                        <span class="check"></span> Запомнить меня
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button id="LoginButton" type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Вход</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>