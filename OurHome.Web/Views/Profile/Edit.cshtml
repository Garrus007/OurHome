@{
    Layout = "~/Views/Profile/_ProfileLayout.cshtml";
    ViewBag.ProfileTitle = "Редактирование профиля";
}


<div class="card">
    <form class="form-horizontal" action="@(Url.Action("Edit", "Profile"))" method="POST">
        @Html.AntiForgeryToken()
        <fieldset>
            
            <legend>Личные данные</legend>

            <div class="form-group">
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="Name" value="" placeholder="Фамилия" required maxlength="@OurHome.Users.User.MaxNameLength">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="Surname" value="" placeholder="Имя" required maxlength="@OurHome.Users.User.MaxSurnameLength">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="Middlename" value="" placeholder="Отчество" required maxlength="@OurHome.Users.User.MaxSurnameLength">
                </div>
            </div>
            
            <legend>Учетная запись</legend>

            <div class="form-group">
                <div class="col-lg-12">
                    <input type="email" class="form-control" name="EmailAddress" value="" placeholder="E-Mail" required maxlength="@OurHome.Users.User.MaxEmailAddressLength">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <input type="password" class="form-control" name="OldPassword" placeholder="Старый пароль" required maxlength="@OurHome.Users.User.MaxPlainPasswordLength">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-12">
                    <input type="password" class="form-control" name="NewPassword" placeholder="Новый пароль" required maxlength="@OurHome.Users.User.MaxPlainPasswordLength">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-12">
                    <input type="password" class="form-control" name="NewPasswordRepeat" placeholder="Повторить пароль" required maxlength="@OurHome.Users.User.MaxPlainPasswordLength">
                </div>
            </div>

            <hr/>

            <div class="form-group">
                <div class="col-lg-12">
                    <button type="submit" id="RegisterButton" class="btn btn-primary">Сохранить</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
